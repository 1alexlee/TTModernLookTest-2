<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Height ="200" Width ="400"
        WindowStyle ="None"
        ResizeMode ="NoResize"
        AllowsTransparency ="True">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="Blue" Offset=".1" />
            <GradientStop Color="BlueViolet" Offset=".4" />
            <GradientStop Color="HotPink" Offset=".9" />
        </LinearGradientBrush>
    </Window.Background>

    <Border>

        <Grid>


            <TextBlock Text="TuneTe♩♩er" FontSize="50" FontFamily="Georgia" FontStyle="Oblique" FontWeight="Thin"
                       Height="50" Width="274">


            </TextBlock>

            <TextBlock Text="Finding music made easy." FontSize="16" FontFamily="Georgia" FontStyle="Oblique" FontWeight="Thin"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="BlanchedAlmond">

            </TextBlock>

            <Button x:Name="btnExplore" Click="btnExplore_Click"
                    Content="Get Exploring"
                    Foreground="WhiteSmoke"
                    FontFamily="Georgia" FontSize="11"
                    Height="25" Width="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="-10,0,0,40"
                    Style="{DynamicResource ExploreButton}"
                    >

            </Button>


        </Grid>


    </Border>







</Window>
